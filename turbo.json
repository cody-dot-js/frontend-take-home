{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": ["VERCEL_GIT_COMMIT_SHA", "VERCEL_DEPLOYMENT_ID"],
	"tasks": {
		"build": {
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"env": ["VERCEL", "SERVER_PORT", "SERVER_SPEED", "VITE_*"],
			"dependsOn": ["^build"],
			"outputs": ["build/**", ".vercel/**", "dist/**"]
		},
		"clean": {
			"cache": false
		},
		"lint": {
			"dependsOn": ["^lint"],
			"outputs": ["node_modules/.cache/.eslintcache"]
		},
		"serve": {
			"env": ["SERVER_SPEED", "SERVER_PORT", "VITE_*"],
			"dependsOn": ["build", "^build"],
      "outputs": ["public/build/**", "build/**", ".vercel/**", "dist/**"]
		},
		"start": {
			"dependsOn": ["^build"],
			"env": ["SERVER_SPEED", "SERVER_PORT", "VITE_*"],
			"cache": false,
			"persistent": true
		},
		"test": {
			"outputs": []
		},
		"test:watch": {
			"cache": false,
			"persistent": true
		},
		"typecheck": {
			"dependsOn": ["^build"]
		}
	}
}
